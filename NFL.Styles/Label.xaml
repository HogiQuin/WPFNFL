<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Header -->
    <Style TargetType="Label" x:Key="labelPanel">
        <Setter Property="Foreground" Value="{StaticResource brushWhite}"></Setter>
        <Setter Property="FontSize" Value="18pt"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    
    <!-- Combos -->
    <Style TargetType="Label" x:Key="labelCombos">
        <Setter Property="Foreground" Value="{StaticResource brushWhite}"></Setter>
        <Setter Property="FontSize" Value="12pt"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Margin" Value="5,5,0,0"></Setter>
    </Style>

    <!-- normal -->
    <Style TargetType="Label" x:Key="labelNormal">
        <Setter Property="Foreground" Value="{StaticResource brushWhite}"></Setter>
        <Setter Property="FontSize" Value="12pt"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Margin" Value="10"></Setter>
    </Style>
</ResourceDictionary>